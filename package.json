  "source": "lib/main.ts",
  "main": "dist/main.js",
  "module": "dist/main.m.js",
  "esmodule": "dist/main.modern.js",
  "types": "dist/main.d.ts",
  "unpkg": "dist/main.umd.js",
  "scripts": {
